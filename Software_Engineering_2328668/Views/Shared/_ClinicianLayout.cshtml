@* Minimal layout for clinician-only pages: navy top bar with Home (left) + Logout (right). *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Clinician</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/brand.css" />
    <link rel="stylesheet" href="/css/clinician.css" />
</head>
<body>
    @await Html.PartialAsync("_BrandHeader")
    <header class="topbar">
        <div class="topbar-left">
            <a class="home-link" href="@Url.Action("Dashboard", "Clinician")">Home</a>
        </div>
        <div class="topbar-right">
            <a class="logout-link" href="@Url.Action("Logout", "Account")">Logout</a>
        </div>
    </header>

    <main class="page-container">
        @RenderBody()
    </main>
</body>
</html>
